extends base.pug

block scripts
    script(src='/static/index.js')
block style 
    style
        include ../static/css/stylee.css
        include ../static/css/signup.css
block container
    .container
        form.mysignupForm(action='/signup', method='post')
            h5 SIGN UP
            input.myInput(type="text" name="name" placeholder="Enter your name..")
            input.myInput(type="number" name="phone" placeholder="Enter your phone number..")            
            input.myInput(type="text" name="email" placeholder="Enter your email no..")
            input.myInput(type="password" name="password" placeholder="Enter your password..")
            textarea.myInput(name="address" placeholder="Enter your Address..." cols="30", rows="5")
            button.btn1(value="submit")
                |   Submit    